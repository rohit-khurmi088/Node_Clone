extends layouts/login-layout.pug

block content
    div.login-container
        h1 Login

        //- Login Form
        form(action="/login",method="POST")
            
            //- Error Message
            p.errorMessage #{errorMessage}

            input(type="text" name="logUsername", placeholder="Username or email", required="", value=logUsername, autocomplete="username")
            input(type="password" name="logPassword", placeholder="Password", required="", autocomplete="current-password")
            input(type="submit", value="Login")
        a(href="/register") Need an account? Register here.